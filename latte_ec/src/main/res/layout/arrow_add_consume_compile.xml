<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        android:text="0"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="25sp" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:showDividers="middle">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/index_add_compile_tb"
            android:orientation="horizontal"
            android:showDividers="middle">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:id="@+id/tv_add_compile_1"
                android:text="1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/tv_add_compile_2"
                android:padding="15dp"
                android:text="2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_add_compile_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:text="3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/it_add_compile_delete"
                android:gravity="center"
                android:padding="15dp"
                android:text="x"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <View
            android:layout_height="1dp"
            android:background="#F0F1F2" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/index_add_compile_tb"
            android:orientation="horizontal"
            android:showDividers="middle">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_add_compile_4"
                android:gravity="center"
                android:padding="15dp"
                android:text="4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/tv_add_compile_5"
                android:padding="15dp"
                android:text="5"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/tv_add_compile_6"
                android:padding="15dp"
                android:text="6"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_add_compile_empty"
                android:gravity="center"
                android:padding="15dp"
                android:text="清零"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <View
            android:layout_height="1dp"
            android:background="#F0F1F2" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/index_add_compile_tb"
            android:orientation="horizontal"
            android:showDividers="middle">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:text="7"
                android:id="@+id/tv_add_compile_7"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:id="@+id/tv_add_compile_8"
                android:text="8"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/tv_add_compile_9"
                android:padding="15dp"
                android:text="9"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/tv_add_compile_dr"
                android:padding="15dp"
                android:text="再记"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <View
            android:layout_height="1dp"
            android:background="#F0F1F2" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/index_add_compile_tb"
            android:orientation="horizontal"
            android:showDividers="middle">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/tv_add_compile_add"
                android:padding="15dp"
                android:text="+"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/tv_add_compile_0"
                android:padding="15dp"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:text="."
                android:id="@+id/tv_add_compile_."
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:padding="15dp"
                android:id="@+id/tv_add_compile_save"
                android:text="保存"
                android:textColor="#fff"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>
</androidx.appcompat.widget.LinearLayoutCompat>